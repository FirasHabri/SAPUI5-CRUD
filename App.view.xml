<mvc:View
	controllerName="app/App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt">

<App id="app">

    <List headerText="Actions" width="40%">
		<CustomListItem>
            <VBox>
                <Button text="Add" press="onPressAdd" />
            </VBox>
        </CustomListItem>

		<CustomListItem>
            <VBox>
                <Button text="View" press="onPressView" />
            </VBox>
        </CustomListItem>

        <CustomListItem>
            <VBox>
                <Button text="Edit" press="onPressEdit" />
            </VBox>
        </CustomListItem>
	</List>
</App>

</mvc:View>